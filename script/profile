#!/usr/bin/env bash

function _imma_profile {
  local shome="${_imma_home:="$(cd -P -- "$(dirname -- "$BASH_SOURCE")/.." && pwd -P)"}"
  PATH="$shome/bin:$shome/exec:$PATH"
}

function _imma {
  local shome="${_imma_home:="$(cd -P -- "$(dirname -- "$BASH_SOURCE")/.." && pwd -P)"}"
  PATH="$shome/bin:$shome/exec:$PATH"
  source imma_common

  __imma "$@"
}

function assume {
  local shome="${_imma_home:="$(cd -P -- "$(dirname -- "$BASH_SOURCE")/.." && pwd -P)"}"
  PATH="$shome/bin:$shome/exec:$PATH"
  source imma_common

  __imma assume "$@"
}

_imma_profile
