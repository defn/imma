#!/usr/bin/env bash

function paste_buffer {
  cat | if type -P pbcopy >/dev/null; then
    local a
    read -n 6 a
    cat <<< "$a"
    echo -n "$a" | pbcopy
  else
    cat
  fi
}

function main {
  local shome="$(cd -P -- "${BASH_SOURCE%/*}/.." && pwd -P)"
  source "$shome/script/profile"
  source normalize

  local nm_key="$1"; shift

  gpg2 -q --batch --yes --decrypt --output - "${BOARD_PATH}/.aws/totp-${nm_key}.gpg" | perl -pe 's{\s*$}{}' | (cd "$shome" && pipenv run imma totp code) | paste_buffer
}

source sub "$BASH_SOURCE" "$@"
